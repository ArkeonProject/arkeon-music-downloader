# Configuración del YouTube Playlist Watcher
# Copia este archivo a .env y configura tus valores

# URL de la playlist de YouTube (REQUERIDO)
PLAYLIST_URL=https://www.youtube.com/playlist?list=YOUR_PLAYLIST_ID

# Directorio donde guardar archivos FLAC
# - En ejecución local (python): puedes usar ./downloads
# - En Docker: usa SIEMPRE /downloads (montado desde el host)
DOWNLOAD_PATH=/downloads

# Intervalo de verificación en milisegundos (opcional, default: 60000 = 1 minuto)
OBSERVER_INTERVAL_MS=60000

# Directorio del host para volumen de descargas (usado por docker-compose)
# Ejemplo servidor: /mnt/storage/media/music/
# Ejemplo local: ./downloads
HOST_DOWNLOAD_PATH=/mnt/storage/media/music/

# Nivel de logs (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de cookies (opcional) para playlists privadas/restricciones
# COOKIES_FILE=/path/to/cookies.txt

# ============================================================
# Sincronización Bidireccional (Opcional)
# ============================================================

# Habilitar sincronización bidireccional
# Cuando está habilitado, el watcher eliminará archivos FLAC cuando
# las canciones sean eliminadas de la playlist de YouTube Music
# ADVERTENCIA: Esto eliminará archivos de tu servidor
# Default: false (deshabilitado por seguridad)
ENABLE_SYNC_DELETIONS=false

# Usar carpeta de papelera en lugar de eliminar permanentemente
# Los archivos se moverán a <DOWNLOAD_PATH>/.trash/ con timestamp
# para poder recuperarlos si fue un error
# Default: true
USE_TRASH_FOLDER=true

# Días de retención en carpeta .trash antes de eliminar permanentemente
# 0 = nunca auto-limpiar (limpieza manual)
# 7 = eliminar archivos después de 7 días
# Default: 7
TRASH_RETENTION_DAYS=7
